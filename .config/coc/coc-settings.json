{
    "languageserver": {
        "rust-analyzer": {
            "command": "rust-analyzer",
            "filetypes": ["rust"],
            "rootPatterns": ["Cargo.toml", "rust-project.json"],
            "initializationOptions": {
                "cargo": {
                    "loadOutDirsFromCheck": true
                },
                "procMacro": {
                    "enable": true
                }
            }
        }
    },
    "suggest": {
        "floatConfig": {
            "width": 60,
            "height": 10,
            "border": true,
            "floatEnable": true
        },
        "maxMenuWidth": 60,
        "minMenuWidth": 10,
        "maxCompleteItemCount": 20,
        "autoTrigger": "always",
        "minTriggerInputLength": 2
    },
    "signature": {
        "enable": true,
        "floatConfig": {
            "width": 60,
            "height": 10
        }
    },
    "hover": {
        "enable": true,
        "floatConfig": {
            "width": 60,
            "height": 10,
            "maxWidth": 60,
            "maxHeight": 10
        }
    },
    "diagnostic": {
        "signOffset": 0,
        "level": "error"
    },
    "diagnostic.errorSign": "",
    "diagnostic.warningSign": "",
    "diagnostic.infoSign": "",
    "diagnostic.hintSign": ""
}

